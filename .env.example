# CIA-SIE Environment Configuration
# ==================================
#
# Copy this file to .env and configure for your environment.
# DO NOT commit .env to version control.
#
# Generate a webhook secret with:
#   python -c "import secrets; print(secrets.token_hex(32))"

# =============================================================================
# ENVIRONMENT
# =============================================================================
# Options: development, staging, production
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./data/cia_sie.db

# =============================================================================
# API SERVER
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# =============================================================================
# AI PROVIDER (Claude) - Optional
# =============================================================================
ANTHROPIC_API_KEY=

# =============================================================================
# SECURITY (REQUIRED FOR PRODUCTION)
# =============================================================================
# Webhook secret for HMAC-SHA256 signature validation
# REQUIRED for production - leave empty for development (unsigned webhooks allowed)
WEBHOOK_SECRET=

# =============================================================================
# FRESHNESS THRESHOLDS (minutes)
# Default values - can be overridden per silo
# =============================================================================
DEFAULT_CURRENT_THRESHOLD_MIN=2
DEFAULT_RECENT_THRESHOLD_MIN=10
DEFAULT_STALE_THRESHOLD_MIN=30

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/cia_sie.log

# =============================================================================
# CORS (for frontend development)
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# NOTE: This system explicitly DOES NOT have configuration for:
# - Aggregation weights (prohibited by design)
# - Scoring thresholds (prohibited by design)
# - Recommendation rules (prohibited by design)
# These features are constitutionally prohibited per Section 0B
# =============================================================================
